<div class="main-container">
  <h2>Account Management</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="/staff/all-accounts" class="btn btn-outline-info btn-sm">View All Current Accounts</a>
    </div>
  <ul class="nav nav-tabs" id="accountTabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pending-tab" data-bs-toggle="tab" href="#pending" role="tab">Pending</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="approved-tab" data-bs-toggle="tab" href="#approved" role="tab">Approved</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="rejected-tab" data-bs-toggle="tab" href="#rejected" role="tab">Rejected</a>
    </li>
  </ul>

  <div class="tab-content" id="accountTabsContent">
    <!-- Pending -->
    <div class="tab-pane fade show active" id="pending" role="tabpanel">
      <h4 class="mt-4">Pending Applications</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Application ID</th>
            <th>Full Name</th>
            <th>Account Type</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Student ID Photo</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% pendingAccounts.forEach(acc => { %>
            <tr>
            <td>
                <strong><%= acc.application_id %></strong><br>
                <a href="/kyc-account/<%= acc.application_id %>" class="btn btn-primary btn-sm mt-1">View Details</a>
            </td>
              <td><%= acc.full_name %></td>
              <td><%= acc.account_type %></td>
              <td><%= acc.email %></td>
              <td><%= acc.phone_number %></td>
              <td>
                <% if (acc.student_id_upload_path) { %>
                <a href="/<%= acc.student_id_upload_path %>" target="_blank" class="btn btn-info btn-sm">View Photo</a>
                <% } else { %>
                <span class="text-muted">No file</span>
                <% } %>
              </td>
              <td><span class="badge bg-warning text-dark"><%= acc.status %></span></td>
              <td>
                <form method="POST" action="/staff/account/action" style="display:inline;">
                  <input type="hidden" name="application_id" value="<%= acc.application_id %>">
                  <button name="action" value="accept" class="btn btn-success btn-sm mb-1">Accept</button>
                </form>

                <form method="POST" action="/staff/account/action" style="display:inline;" onsubmit="return confirm('Are you sure you want to reject this account?');">
                  <input type="hidden" name="application_id" value="<%= acc.application_id %>">
                  <select name="rejection_reason" required class="form-select form-select-sm d-inline-block w-auto mx-1">
                    <option value="">--Select Reason--</option>
                    <option value="User is underage">User is underage</option>
                    <option value="Incomplete documents">Incomplete documents</option>
                    <option value="Suspicious activity">Suspicious activity</option>
                    <option value="Does not meet criteria">Does not meet criteria</option>
                  </select>
                  <button name="action" value="reject" class="btn btn-danger btn-sm">Reject</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Approved -->
    <div class="tab-pane fade" id="approved" role="tabpanel">
      <h4 class="mt-4">Approved Applications</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Application ID</th>
            <th>Full Name</th>
            <th>Account Type</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Student ID Photo</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% approvedAccounts.forEach(acc => { %>
            <tr>
              <td>
                <strong><%= acc.application_id %></strong><br>
                <a href="/kyc-account/<%= acc.application_id %>" class="btn btn-primary btn-sm mt-1">View Details</a>
              </td>
              <td><%= acc.full_name %></td>
              <td><%= acc.account_type %></td>
              <td><%= acc.email %></td>
              <td><%= acc.phone_number %></td>
              <td>
                <% if (acc.student_id_upload_path) { %>
                  <a href="/<%= acc.student_id_upload_path %>" target="_blank" class="btn btn-info btn-sm">View Photo</a>
                <% } else { %>
                  <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td><span class="badge bg-success"><%= acc.status %></span></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Rejected -->
    <div class="tab-pane fade" id="rejected" role="tabpanel">
      <h4 class="mt-4">Rejected Applications</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Application ID</th>
            <th>Full Name</th>
            <th>Account Type</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Student ID Photo</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% rejectedAccounts.forEach(acc => { %>
            <tr>
              <td>
                <strong><%= acc.application_id %></strong><br>
                <a href="/kyc-account/<%= acc.application_id %>" class="btn btn-primary btn-sm mt-1">View Details</a>
              </td>
              <td><%= acc.full_name %></td>
              <td><%= acc.account_type %></td>
              <td><%= acc.email %></td>
              <td><%= acc.phone_number %></td>
              <td>
                <% if (acc.student_id_upload_path) { %>
                  <a href="/<%= acc.student_id_upload_path %>" target="_blank" class="btn btn-info btn-sm">View Photo</a>
                <% } else { %>
                  <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td><span class="badge bg-danger"><%= acc.status %></span></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
