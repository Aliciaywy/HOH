<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP - HOH Digital Bank</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: radial-gradient(ellipse at 60% 10%, #232946 0%, #0f172a 100%);
      color: #e2e8f0;
      min-height: 100vh;
      margin: 0;
    }

    .navbar {
      background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(125, 249, 255, 0.2);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .navbar-brand {
      font-family: 'Orbitron', sans-serif;
      font-weight: 800;
      font-size: 1.5rem;
      color: #7df9ff !important;
      text-shadow: 0 0 20px rgba(125, 249, 255, 0.5);
    }

    .nav-link {
      color: #94a3b8 !important;
      font-weight: 500;
      transition: all 0.3s ease;
      border-radius: 8px;
      margin: 0 5px;
      padding: 8px 16px !important;
    }

    .nav-link:hover,
    .nav-link.active {
      color: #7df9ff !important;
      background: rgba(125, 249, 255, 0.1);
      transform: translateY(-2px);
    }

    .main-container {
      max-width: 600px;
      margin: 120px auto 40px;
      padding: 0 20px;
      position: relative;
      background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
      border-radius: 20px;
      backdrop-filter: blur(20px);
      border: 1px solid rgba(125, 249, 255, 0.2);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
      padding: 40px;
      animation: fadeInUp 0.8s ease-out;
    }

    .main-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #22c55e 0%, #7df9ff 50%, #22c55e 100%);
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 1; }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h2 {
      color: #7df9ff;
      font-family: 'Orbitron', sans-serif;
      font-weight: 800;
      text-align: center;
      margin-bottom: 30px;
      font-size: 2rem;
      text-shadow: 0 0 20px rgba(125, 249, 255, 0.3);
    }

    .otp-section {
      background: linear-gradient(135deg, rgba(30, 41, 59, 0.6) 0%, rgba(15, 23, 42, 0.8) 100%);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 30px;
      border: 1px solid rgba(125, 249, 255, 0.1);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      text-align: center;
    }

    .otp-icon {
      font-size: 4rem;
      color: #22c55e;
      margin-bottom: 20px;
      text-shadow: 0 0 20px rgba(34, 197, 94, 0.5);
    }

    .form-label {
      color: #94a3b8;
      font-weight: 600;
      margin-bottom: 8px;
      text-align: left;
    }

    .form-control {
      background: rgba(30, 41, 59, 0.8);
      border: 1px solid rgba(125, 249, 255, 0.3);
      color: #e2e8f0;
      border-radius: 10px;
      padding: 15px 20px;
      font-size: 1.2rem;
      text-align: center;
      letter-spacing: 0.5em;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      background: rgba(30, 41, 59, 0.9);
      border-color: #7df9ff;
      box-shadow: 0 0 0 0.2rem rgba(125, 249, 255, 0.25);
      color: #e2e8f0;
    }

    .form-control::placeholder {
      color: #64748b;
      letter-spacing: normal;
    }

    .btn-primary {
      background: linear-gradient(135deg, #22c55e 0%, #7df9ff 100%);
      border: none;
      color: #0f172a;
      font-weight: 700;
      border-radius: 12px;
      padding: 15px 40px;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
      width: 100%;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
      color: #0f172a;
    }

    .btn-secondary {
      background: linear-gradient(135deg, #64748b 0%, #94a3b8 100%);
      border: none;
      color: #0f172a;
      font-weight: 700;
      border-radius: 12px;
      padding: 12px 30px;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(100, 116, 139, 0.3);
      text-decoration: none;
      display: inline-block;
      margin-top: 15px;
    }

    .btn-secondary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(100, 116, 139, 0.4);
      color: #0f172a;
    }

    .alert {
      border-radius: 12px;
      border: none;
      font-weight: 500;
      margin-bottom: 25px;
    }

    .alert-danger {
      background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
      color: #dc2626;
      border: 1px solid rgba(220, 38, 38, 0.3);
    }

    .info-text {
      color: #94a3b8;
      font-size: 0.95rem;
      margin-bottom: 25px;
      line-height: 1.5;
    }

    .resend-otp {
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px solid rgba(125, 249, 255, 0.1);
    }

    .resend-link {
      color: #7df9ff;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .resend-link:hover {
      color: #22c55e;
      text-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
    }

    .countdown {
      color: #22c55e;
      font-weight: 600;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard/staff">HOH Bank Staff</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarStaff" aria-controls="navbarStaff" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarStaff">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/staff/users">User Management</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/pending-card">Card Management</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/product-catalog">Product Catalog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/transactions">Transactions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/staff/accounts">Account Management</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/create-user">Add User</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/staff/profile">Staff Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/staff/quiz-monitor">Financial Quiz Results Data</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <!-- Main Content -->
  <div class="main-container">
    <h2>Verify Password Change</h2>

    <div class="otp-section">
      <div class="otp-icon">üîê</div>
      
      <% if (error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>

      <div class="info-text">
        We've sent a 6-digit verification code to your email address. Please enter the code below to confirm your password change.
      </div>

      <form method="POST" action="/staff/profile/verify-otp">
        <div class="mb-4">
          <label for="otp" class="form-label">Enter OTP Code</label>
          <input type="text" class="form-control" id="otp" name="otp" placeholder="000000" maxlength="6" required autocomplete="off">
        </div>
        
        <button type="submit" class="btn btn-primary">Verify & Change Password</button>
      </form>

      <div class="resend-otp">
        <small class="text-muted">Didn't receive the code?</small><br>
        <a href="/staff/profile/resend-otp" class="resend-link">Resend OTP</a>
        <div class="countdown" id="countdown"></div>
      </div>

      <div class="text-center">
        <a href="/staff/profile/edit" class="btn btn-secondary">Cancel</a>
      </div>
    </div>
  </div>

  <script>
    // Auto-focus on OTP input
    document.getElementById('otp').focus();

    // Format OTP input (optional - adds spaces between digits)
    document.getElementById('otp').addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
      e.target.value = value;
    });

    // Countdown timer for resend OTP (optional)
    let countdown = 60;
    const countdownElement = document.getElementById('countdown');
    const resendLink = document.querySelector('.resend-link');
    
    function updateCountdown() {
      if (countdown > 0) {
        countdownElement.textContent = `Resend available in ${countdown} seconds`;
        resendLink.style.pointerEvents = 'none';
        resendLink.style.opacity = '0.5';
        countdown--;
        setTimeout(updateCountdown, 1000);
      } else {
        countdownElement.textContent = '';
        resendLink.style.pointerEvents = 'auto';
        resendLink.style.opacity = '1';
      }
    }
    
    updateCountdown();
  </script>
</body>
</html>
