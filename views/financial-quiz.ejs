  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    html, body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      width: 100vw;
      box-sizing: border-box;
      font-family: 'Inter', 'Georgia', serif;
      background: linear-gradient(120deg, #232946 0%, #0f172a 100%);
      color: #f3f6fa;
      overflow-x: hidden;
    }

    .navbar {
      position: fixed;
      top: 0;
      width: 100vw;
      background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%);
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      z-index: 10;
      padding: 1rem 0;
      border-bottom: 1px solid rgba(125, 249, 255, 0.2);
    }

    .navbar-brand {
      font-weight: 800;
      font-size: 1.6rem;
      color: #7df9ff !important;
      text-shadow: 0 0 15px rgba(125, 249, 255, 0.6);
      letter-spacing: 1.2px;
      font-family: 'Orbitron', sans-serif;
    }

    .financial-quiz-container {
      max-width: 1000px;
      margin: 100px auto 40px;
      background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%);
      border-radius: 24px;
      box-shadow: 
        0 25px 60px rgba(34, 197, 94, 0.15),
        0 10px 30px rgba(125, 249, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(125, 249, 255, 0.2);
      padding: 40px;
      animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h2 {
      color: #7df9ff;
      font-family: 'Orbitron', sans-serif;
      font-weight: 800;
      text-align: center;
      margin-bottom: 40px;
      font-size: 2.5rem;
      text-shadow: 
        0 0 20px rgba(125, 249, 255, 0.4),
        0 0 40px rgba(125, 249, 255, 0.2);
    }

    .quiz-intro {
      background: linear-gradient(135deg, rgba(125, 249, 255, 0.1) 0%, rgba(34, 197, 94, 0.05) 100%);
      border: 1px solid rgba(125, 249, 255, 0.3);
      border-radius: 20px;
      padding: 1.5rem;
      text-align: center;
      margin-bottom: 2rem;
      box-shadow: 0 8px 32px rgba(125, 249, 255, 0.15);
    }

    .quiz-intro p {
      color: #e0eaff;
      font-size: 1.1rem;
      margin: 0;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .question {
      background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(125, 249, 255, 0.05) 100%);
      border: 1px solid rgba(34, 197, 94, 0.3);
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(34, 197, 94, 0.15);
      transition: transform 0.3s ease;
    }

    .question:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 45px rgba(34, 197, 94, 0.2);
    }

    .question p {
      color: #7df9ff;
      font-family: 'Orbitron', sans-serif;
      font-weight: 700;
      font-size: 1.2rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 15px rgba(125, 249, 255, 0.4);
    }

    .question label {
      color: #e0eaff;
      font-size: 1.05rem;
      line-height: 1.6;
      margin-bottom: 0.8rem;
      padding-left: 2rem;
      position: relative;
      cursor: pointer;
      display: block;
      transition: color 0.3s ease;
    }

    .question label:hover {
      color: #22c55e;
    }

    .question input[type="radio"] {
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 18px;
      height: 18px;
      accent-color: #22c55e;
      cursor: pointer;
    }

    .question input[type="radio"]:checked + span {
      color: #22c55e;
      font-weight: 600;
    }

    .submit-section {
      text-align: center;
      margin-top: 2rem;
    }

    button[type="submit"] {
      background: linear-gradient(135deg, #22c55e, #7df9ff);
      color: #0f172a;
      font-weight: 700;
      border: none;
      border-radius: 12px;
      padding: 15px 40px;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
      font-family: 'Orbitron', sans-serif;
    }

    button[type="submit"]:hover {
      background: linear-gradient(135deg, #16a34a 0%, #0ff 100%);
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
    }

    @media (max-width: 768px) {
      .financial-quiz-container {
        margin: 80px 20px 40px;
        padding: 20px;
      }
      
      h2 {
        font-size: 2rem;
      }
      
      .question {
        padding: 1.5rem;
      }
      
      .question p {
        font-size: 1.1rem;
      }
    }
  </style>
</head>
<body>
