    <div class="container">
    <h2>üí≥ All User Transactions</h2>

    <!-- Export and Filter Section -->
    <div class="filter-section">
      <div class="d-flex justify-content-between align-items-center flex-wrap">
        <form method="GET" action="/transactions" class="d-flex align-items-center gap-3 flex-wrap">
          <label for="userSelect" class="fw-bold text-light">üîç Filter by User:</label>
          <select name="user_id" id="userSelect" class="form-select">
            <option value="">All Users</option>
            <% users.forEach(u => { %>
              <option value="<%= u.user_id %>" <%= selectedUserId == u.user_id ? 'selected' : '' %>>
                <%= u.full_name %>
              </option>
            <% }) %>
          </select>
          <button type="submit" class="btn btn-select">
            <span class="loading" style="display: none;"></span>
            üîç Filter
          </button>
        </form>
        
        <!-- Export CSV Button -->
        <div class="mt-3 mt-md-0">
          <% if (selectedUserId) { %>
            <a href="/export/transactions?user_id=<%= selectedUserId %>" class="btn btn-select">
              üìä Export CSV (This User)
            </a>
          <% } else { %>
            <a href="/export/transactions" class="btn btn-select">
              üìä Export All Transactions CSV
            </a>
          <% } %>
        </div>
      </div>
    </div>    <% if (transactions.length === 0 && selectedUserId) { %>
      <div class="no-transactions">
        <h3>üîç No transactions found</h3>
        <p>No transactions were found for the selected user. Try selecting a different user or view all transactions.</p>
      </div>
    <% } else if (transactions.length > 0) { %>
      <div class="table-container">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>üë§ Full Name</th>
                <th>üè¶ Account Number</th>
                <th>üìã Account Type</th>
                <th>üíº Transaction Type</th>
                <th>üí∞ Amount</th>
                <th>üìù Description</th>
                <th>üìÖ Date</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(tx => { %>
                <tr>
                  <td><strong><%= tx.full_name %></strong></td>
                  <td><code><%= tx.account_number %></code></td>
                  <td><span class="badge bg-info"><%= tx.account_type.replace('_', ' ') %></span></td>
                  <td><%= tx.transaction_type.charAt(0).toUpperCase() + tx.transaction_type.slice(1) %></td>
                  <td class="amount-cell <%= tx.amount < 0 ? 'text-danger' : 'text-success' %>">
                    <%= tx.amount < 0 ? '-' : '+' %>$<%= Math.abs(tx.amount).toFixed(2) %>
                  </td>
                  <td><%= tx.description %></td>
                  <td><%= new Date(tx.transaction_date).toLocaleDateString() %><br>
                      <small class="text-muted"><%= new Date(tx.transaction_date).toLocaleTimeString() %></small>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <div class="no-transactions">
        <h3>üìä No transactions available</h3>
        <p>There are currently no transactions to display. Transactions will appear here once users start making them.</p>
      </div>
    <% } %>
