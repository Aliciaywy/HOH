  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Enhanced form submission with loading state
    document.querySelector('form').addEventListener('submit', function(e) {
      const button = this.querySelector('.btn-select');
      const loading = button.querySelector('.loading');
      
      if (loading) {
        loading.style.display = 'inline-block';
        button.disabled = true;
      }
    });

    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });

    // Add hover effects to table rows
    document.querySelectorAll('tbody tr').forEach(row => {
      row.addEventListener('mouseenter', function() {
        this.style.background = 'rgba(125, 249, 255, 0.1)';
      });
      
      row.addEventListener('mouseleave', function() {
        this.style.background = 'transparent';
      });
    });

    // Add click to copy functionality for account numbers
    document.querySelectorAll('code').forEach(code => {
      code.style.cursor = 'pointer';
      code.title = 'Click to copy';
      
      code.addEventListener('click', function() {
        navigator.clipboard.writeText(this.textContent).then(() => {
          const original = this.textContent;
          this.textContent = '‚úì Copied!';
          this.style.color = '#22c55e';
          
          setTimeout(() => {
            this.textContent = original;
            this.style.color = '';
          }, 2000);
        });
      });
    });

    // Add animation when page loads
    window.addEventListener('load', function() {
      document.querySelectorAll('.table-container, .filter-section').forEach((element, index) => {
        element.style.opacity = '0';
        element.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          element.style.transition = 'all 0.6s ease';
          element.style.opacity = '1';
          element.style.transform = 'translateY(0)';
        }, index * 200);
      });
    });
  </script>
