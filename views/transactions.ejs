    border: 1px solid rgba(125, 249, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  table {
    background: transparent;
    color: #e0eaff;
    border-radius: 12px;
    overflow: hidden;
    font-size: 0.9rem;
    width: 100%;
    margin: 0;
  }

  thead th {
    background: linear-gradient(90deg, #0f4c4b, #1a5d5a);
    color: #7df9ff;
    text-align: center;
    font-weight: 600;
    padding: 1rem 0.75rem;
    font-size: 0.95rem;
    text-shadow: 0 0 10px rgba(125, 249, 255, 0.3);
    border: none;
  }

  tbody td {
    text-align: center;
    padding: 1rem 0.75rem;
    border: none;
    border-bottom: 1px solid rgba(125, 249, 255, 0.1);
    transition: all 0.3s ease;
  }

  tbody tr:hover {
    background: rgba(125, 249, 255, 0.05);
    transform: scale(1.01);
  }

  tbody tr:last-child td {
    border-bottom: none;
  }

  .text-success {
    color: #22c55e !important;
    font-weight: 600;
    text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
  }

  .text-danger {
    color: #ef4444 !important;
    font-weight: 600;
    text-shadow: 0 0 10px rgba(239, 68, 68, 0.3);
  }

  .amount-cell {
    font-family: 'Courier New', monospace;
    font-weight: 700;
    font-size: 1rem;
  }

  .no-transactions {
    text-align: center;
    padding: 3rem;
    color: #94a3b8;
    font-size: 1.1rem;
    background: rgba(24, 31, 47, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    border: 1px solid rgba(125, 249, 255, 0.2);
    margin-top: 2rem;
  }

  footer {
    text-align: center;
    color: #94a3b8;
    margin-top: 3rem;
    padding: 2rem 0;
    border-top: 1px solid rgba(125, 249, 255, 0.2);
    background: rgba(24, 31, 47, 0.3);
    backdrop-filter: blur(10px);
  }

  /* Enhanced Buttons */
  .btn-select {
    background: linear-gradient(135deg, #22c55e 0%, #7df9ff 100%);
    border: none;
    color: #0f172a;
    font-weight: 700;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    box-shadow: 0 4px 16px rgba(34, 197, 94, 0.3);
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    user-select: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .btn-select::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .btn-select:hover::before {
    left: 100%;
  }

  .btn-select:hover,
  .btn-select:focus {
    background: linear-gradient(135deg, #16a34a 0%, #0ff 100%);
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(34, 197, 94, 0.5);
    color: #fff;
    outline: none;
  }

  .btn-select:active {
    transform: translateY(-1px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
    
    h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    
    .filter-section {
      padding: 1.5rem;
    }
    
    .d-flex {
      flex-direction: column;
      gap: 1rem;
    }
    
    .form-select {
      max-width: 100%;
    }
    
    table {
      font-size: 0.8rem;
    }
    
    thead th,
    tbody td {
      padding: 0.5rem 0.25rem;
    }
  }

  /* Loading Animation */
  .loading {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 2px solid rgba(125, 249, 255, 0.3);
    border-top: 2px solid #7df9ff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Smooth transitions */
  * {
    transition: all 0.3s ease;
  }
  </style>
