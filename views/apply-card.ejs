<div class="container">
  <h1>Choose a Product</h1>
  <div class="row justify-content-center g-4">

    <% const credit = products.find(p => p.product_type === 'credit_card'); %>
    <% const debit = products.find(p => p.product_type === 'debit_card'); %>

    <!-- Credit Card -->
    <% if (credit) { %>
      <div class="col-md-5">
        <div class="product-option" tabindex="0" role="button" aria-label="Select Credit Card">
          <img src="/images/credit.png" alt="Credit Card Icon" />
          <h3><%= credit.product_name %></h3>
          <p><%= credit.description %></p>
          <% if (!ownedTypes.includes('credit')) { %>
            <a href="/credit-card" class="btn-select">Select Credit Card</a>
          <% } else { %>
            <button class="btn btn-secondary" disabled>Already Owned</button>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <p>No Credit Card product found in database.</p>
    <% } %>

    <!-- Debit Card -->
    <% if (debit) { %>
      <div class="col-md-5">
        <div class="product-option" tabindex="0" role="button" aria-label="Select Debit Card">
          <img src="/images/debit.png" alt="Debit Card Icon" />
          <h3><%= debit.product_name %></h3>
          <p><%= debit.description %></p>
          <% if (!ownedTypes.includes('debit')) { %>
            <a href="/debit-card" class="btn-select">Select Debit Card</a>
          <% } else { %>
            <button class="btn btn-secondary" disabled>Already Owned</button>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <p>No Debit Card product found in database.</p>
    <% } %>

  </div>
</div>


