<div class="container-wrapper">
  <div class="apply-container">
    <h2>Pending Card Applications</h2>
  <div class="d-flex justify-content-end mb-3">
      <a href="/cards" class="btn btn-outline-info">View All Issued Cards</a>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Application ID</th>
          <th>User ID</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>NRIC</th>
          <th>Income Source</th>
          <th>Student ID Upload</th>
          <th>Card Type</th>
          <th>Status</th>
          <th>KYC Verified</th>
          <th>Submitted At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (applications.length> 0) { %>
          <% applications.forEach(app=> { %>
            <tr>
              <td>
                <%= app.application_id %>
              </td>
              <td><a href="/kyc/<%= app.user_id %>" class="text-primary">
                  <%= app.user_id %>
                </a></td>
              <td>
                <%= app.full_name %>
              </td>
              <td>
                <%= app.email %>
              </td>
              <td>
                <%= app.phone_number %>
              </td>
         
              <td>
                <%= app.nric %>
              </td>
        
              <td>
                <%= Number(app.income_source || 0).toFixed(2) %>
              </td>
              <td>
                <% if (app.student_id_upload_path) { %>
                  <a href="<%= app.student_id_upload_path %>" target="_blank">View File</a>
                  <% } else { %>
                    N/A
                    <% } %>
              </td>
              <td>
                <%= app.card_type %>
              </td>
              <td>
                <%= app.status %>
              </td>
              <td>
                <%= app.kyc_verified ? 'Yes' : 'No' %>
              </td>
              <td>
                <%= app.submitted_at.toISOString().split('T')[0] %>
              </td>
              <td>
                <form method="POST" action="/pending-card" style="display:inline;">
                  <input type="hidden" name="application_id" value="<%= app.application_id %>">
                  <button name="action" value="accept" class="btn btn-success btn-sm">Accept</button>
                </form>
                <form method="POST" action="/pending-card" style="display:inline;"
                  onsubmit="return confirmReject(this);">
                  <input type="hidden" name="application_id" value="<%= app.application_id %>">
                  <select name="rejection_reason" required class="form-select form-select-sm"
                    style="width: auto; display: inline-block;">
                    <option value="">--Select Reason--</option>
                    <option value="User is underage">User is underage</option>
                    <option value="Incomplete documents">Incomplete documents</option>
                    <option value="Suspicious activity">Suspicious activity</option>
                    <option value="Does not meet criteria">Does not meet criteria</option>
                  </select>
                  <button name="action" value="reject" class="btn btn-danger btn-sm">Reject</button>
                </form>
</form>

              </td>
            </tr>
            <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="16" class="text-center">No pending applications.</td>
                </tr>
                <% } %>
      </tbody>
    </table>

    <div class="bottom-buttons">
      <a href="/viewAccepted" class="btn btn-view">View Accepted Cards</a>
      <a href="/viewRejected" class="btn btn-view">View Rejected Cards</a>
    </div>
  </div>
</div>
  <footer>
    &copy; <%= new Date().getFullYear() %> HOH Card System. All rights reserved.
  </footer>
</body>
<script>
  function confirmReject(form) {
    const reason = form.querySelector('[name="rejection_reason"]').value;
    if (!reason) {
      alert("Please select a reason for rejection.");
      return false;
    }
    return confirm("Are you sure you want to reject this application?");
  }

</script>

