        0 0 40px rgba(125, 249, 255, 0.2);
      position: relative;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 3px;
      background: linear-gradient(90deg, transparent, #7df9ff, transparent);
      border-radius: 2px;
    }

    .form-section {
      background: rgba(15, 28, 42, 0.8);
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 1.5rem;
      border: 1px solid rgba(125, 249, 255, 0.1);
      backdrop-filter: blur(5px);
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-label {
      color: #7df9ff;
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
      text-shadow: 0 0 8px rgba(125, 249, 255, 0.3);
    }

    .form-control {
      background: rgba(15, 28, 42, 0.9);
      border: 1px solid rgba(125, 249, 255, 0.3);
      border-radius: 10px;
      padding: 12px 16px;
      color: #ffffff;
      font-size: 0.95rem;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      outline: none;
      border-color: #7df9ff;
      box-shadow: 0 0 0 3px rgba(125, 249, 255, 0.2);
      background: rgba(15, 28, 42, 1);
      color: #ffffff;
    }

    .form-control::placeholder {
      color: #64748b;
    }

    .form-select {
      background: rgba(15, 28, 42, 0.9);
      border: 1px solid rgba(125, 249, 255, 0.3);
      border-radius: 10px;
      padding: 12px 16px;
      color: #ffffff;
      font-size: 0.95rem;
      transition: all 0.3s ease;
    }

    .form-select:focus {
      outline: none;
      border-color: #7df9ff;
      box-shadow: 0 0 0 3px rgba(125, 249, 255, 0.2);
      background: rgba(15, 28, 42, 1);
      color: #ffffff;
    }

    .form-select option {
      background: #1e293b;
      color: #ffffff;
    }

    .btn-create {
      background: linear-gradient(135deg, #22c55e 0%, #7df9ff 100%);
      color: #0f172a;
      border: none;
      border-radius: 15px;
      padding: 15px 40px;
      font-size: 1.1rem;
      font-weight: 700;
      transition: all 0.3s ease;
      box-shadow: 0 8px 20px rgba(34, 197, 94, 0.3);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
      display: block;
    }

    .btn-create:hover {
      background: linear-gradient(135deg, #16a34a 0%, #0ea5e9 100%);
      transform: translateY(-2px);
      box-shadow: 0 12px 30px rgba(34, 197, 94, 0.4);
      color: #ffffff;
    }

    .btn-create:active {
      transform: translateY(0);
    }

    .role-info {
      background: rgba(125, 249, 255, 0.1);
      border: 1px solid rgba(125, 249, 255, 0.2);
      border-radius: 10px;
      padding: 1rem;
      margin-top: 1rem;
      font-size: 0.9rem;
      color: #94a3b8;
    }

    .role-info h5 {
      color: #7df9ff;
      margin-bottom: 0.5rem;
      font-weight: 600;
    }

    .role-info ul {
      margin: 0;
      padding-left: 1.5rem;
    }

    .role-info li {
      margin-bottom: 0.3rem;
    }

    .security-note {
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.2);
      border-radius: 10px;
      padding: 1rem;
      margin-top: 1rem;
      font-size: 0.9rem;
      color: #fca5a5;
    }

    .security-note .icon {
      display: inline-block;
      margin-right: 0.5rem;
      font-size: 1.1rem;
    }

    footer {
      text-align: center;
      margin-top: 2rem;
      padding: 25px 0;
      font-weight: 600;
      font-size: 1rem;
      color: #94a3b8;
      border-top: 1px solid rgba(125, 249, 255, 0.2);
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    }

    @media (max-width: 768px) {
      .main-container {
        margin: 100px 15px 60px;
        padding: 1.5rem;
      }

      .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      h2 {
        font-size: 2rem;
      }

      .form-section {
        padding: 1.5rem;
      }
    }
  </style>
</head>
