<div class="container py-5">
  <div class="glass-card">
    <h2 class="mb-5 text-center neon-heading">ðŸš€ Book a Financial Consultation</h2>


    <table class="table table-bordered table-hover text-light">
      <thead class="text-dark">
        <tr>
          <th>Advisor Name</th>
          <th>Appointment Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (slots.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center">No available slots right now.</td>
          </tr>
        <% } else { %>
          <% slots.forEach(slot => { %>
            <tr>
              <td><%= slot.advisor_name || 'â€”' %></td>
              <td><%= new Date(slot.appointment_date).toLocaleString() %></td>
              <td>
                <% 
                  const status = slot.status.toLowerCase();
                  const wasAccepted = slot.was_accepted_before;
                  const statusLabel = status === 'accepted' ? 'Accepted'
                                   : status === 'pending accept' ? 'Pending Accept'
                                   : status === 'booked' && wasAccepted ? 'Rescheduled'
                                   : status === 'booked' ? 'Pending'
                                   : status.charAt(0).toUpperCase() + status.slice(1);
                %>

                <% if (statusLabel === 'Accepted') { %>
                  <span class="badge bg-success"><%= statusLabel %></span>
                <% } else if (statusLabel === 'Pending Accept') { %>
                  <span class="badge bg-warning text-dark"><%= statusLabel %></span>
                <% } else if (statusLabel === 'Rescheduled') { %>
                  <span class="badge bg-info"><%= statusLabel %></span>
                <% } else if (statusLabel === 'Pending') { %>
                  <span class="badge bg-secondary"><%= statusLabel %></span>
                <% } else { %>
                  <span class="badge bg-light text-dark"><%= statusLabel %></span>
                <% } %>
              </td>

              <td>
                <% if (slot.status === 'available') { %>
                  <form action="/customer/book/<%= slot.consultation_id %>" method="POST">
                    <button type="submit" class="btn btn-hoh btn-sm">Book</button>
                  </form>
                <% } else if ((['booked', 'accepted', 'pending accept'].includes(slot.status)) && slot.customer_id === user_id) { %>
                  <% if (slot.status === 'pending accept') { %>
                    <form action="/customer/accept-reschedule/<%= slot.consultation_id %>" method="POST">
                      <button type="submit" class="btn btn-success btn-sm mb-1">Accept Rescheduled Slot</button>
                    </form>
                  <% } %>
                  <form action="/customer/cancel/<%= slot.consultation_id %>" method="POST">
                    <button type="submit" class="btn btn-warning btn-sm">Cancel</button>
                  </form>
                <% } else { %>
                  <span class="text-muted">Not Available</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
  function createStars(num) {
    const stars = document.querySelector('.stars');
    for (let i = 0; i < num; i++) {
      const star = document.createElement('div');
      star.className = 'star';
      const size = Math.random() * 2 + 1;
      star.style.width = `${size}px`;
      star.style.height = `${size}px`;
      star.style.top = `${Math.random() * 100}vh`;
      star.style.left = `${Math.random() * 100}vw`;
      star.style.opacity = Math.random() * 0.7 + 0.3;
      star.style.animationDuration = `${1.5 + Math.random() * 2}s`;
      stars.appendChild(star);
    }
  }
  createStars(100);
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
