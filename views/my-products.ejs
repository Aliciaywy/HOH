                  <th>Card Number</th>
                  <th>Status</th>
                  <th>Balance</th>
                </tr>
              </thead>
              <tbody>
                <% cards.forEach(card=> { %>
                  <tr>
                    <td>
                      <%= card.product_name %>
                    </td>
                    <td>
                      <%= card.card_type %>
                    </td>
                    <td>**** **** **** <%= card.card_number.slice(-4) %>
                    </td>
                    <td>
                      <%= card.card_status %>
                    </td>
                    <td>$<%= Number(card.balance).toFixed(2) %>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
