    }    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 40px;
      background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%);
      border-radius: 24px;
      box-shadow: 
        0 25px 60px rgba(34, 197, 94, 0.15),
        0 10px 30px rgba(125, 249, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(125, 249, 255, 0.2);
      position: relative;
      overflow: hidden;
      animation: fadeInUp 0.6s ease-out;
    }

    .container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #22c55e 0%, #7df9ff 50%, #22c55e 100%);
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 1; }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h2 {
      color: #7df9ff;
      font-family: 'Orbitron', sans-serif;
      font-weight: 800;
      text-align: center;
      margin-bottom: 40px;
      font-size: 2.5rem;
      text-shadow: 
        0 0 20px rgba(125, 249, 255, 0.4),
        0 0 40px rgba(125, 249, 255, 0.2);
      position: relative;
      padding-bottom: 20px;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: linear-gradient(90deg, #22c55e, #7df9ff, #22c55e);
      border-radius: 2px;
    }    .table {
      background: rgba(24, 31, 47, 0.6);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      margin-bottom: 40px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(125, 249, 255, 0.1);
    }

    .table th,
    .table td {
      padding: 16px 20px;
      border: none;
      vertical-align: middle;
      font-weight: 500;
    }

    .table thead {
      background: linear-gradient(135deg, #181f2f 0%, #1e2a3a 100%);
    }

    .table thead th {
      color: #7df9ff;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 0.9rem;
      border-bottom: 2px solid rgba(125, 249, 255, 0.3);
    }

    .table tbody tr {
      transition: all 0.3s ease;
      background: rgba(30, 42, 58, 0.3);
    }

    .table tbody tr:nth-child(even) {
      background: rgba(24, 31, 47, 0.4);
    }

    .table tbody tr:hover {
      background: rgba(125, 249, 255, 0.1);
      transform: translateY(-2px);
      box-shadow: 0 4px 20px rgba(125, 249, 255, 0.1);
    }

    .table tbody td {
      color: #e2e8f0;
      font-size: 1rem;
    }    .section-title {
      color: #22c55e;
      margin-top: 40px;
      margin-bottom: 25px;
      font-size: 1.8rem;
      font-weight: 700;
      font-family: 'Orbitron', sans-serif;
      text-shadow: 0 0 15px rgba(34, 197, 94, 0.4);
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .section-title::before {
      content: '';
      width: 4px;
      height: 30px;
      background: linear-gradient(180deg, #22c55e, #7df9ff);
      border-radius: 2px;
    }

    .action-buttons {
      display: flex;
      gap: 12px;
      align-items: center;
    }    .btn-hoh {
      background: linear-gradient(135deg, #22c55e 0%, #7df9ff 100%);
      color: #0f172a;
      font-weight: 700;
      border: none;
      border-radius: 12px;
      transition: all 0.3s ease;
      font-size: 1rem;
      padding: 12px 20px;
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      min-width: 120px;
      position: relative;
      overflow: hidden;
    }

    .btn-hoh::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-hoh:hover::before {
      left: 100%;
    }

    .btn-hoh:hover {
      background: linear-gradient(135deg, #16a34a 0%, #0ff 100%);
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
    }

    .btn-hoh-transfer {
      background: linear-gradient(135deg, #7b3cff 0%, #22c55e 100%);
      color: #0f172a;
      font-weight: 700;
      border: none;
      border-radius: 12px;
      transition: all 0.3s ease;
      font-size: 1rem;
      padding: 12px 20px;
      box-shadow: 0 4px 15px rgba(123, 60, 255, 0.3);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      min-width: 120px;
      position: relative;
      overflow: hidden;
    }

    .btn-hoh-transfer::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-hoh-transfer:hover::before {
      left: 100%;
    }

    .btn-hoh-transfer:hover {
      background: linear-gradient(135deg, #5227cc 0%, #16a34a 100%);
      color: #fff;
      transform: translateY(-2px);
