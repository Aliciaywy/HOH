            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% accounts.forEach(account=> { %>
            <tr>
              <td>
                <%= account.product_name %>
              </td>
              <td>
                <%= account.full_name %>
              </td>
              <td>
                <%= account.account_number %>
              </td>
              <td>
                <%= account.account_type %>
              </td>
              <td>$<%= Number(account.balance).toFixed(2) %>
              </td>
              <td>
                <%= account.account_status %>
              </td>
              <td>             <% if (account.account_status === 'active') { %>
<a href="#"
   class="btn btn-danger btn-sm cancel-account-btn"
   data-account-number="<%= account.account_number %>" 
   data-balance="<%= account.balance %>"
   data-account-type="<%= account.account_type %>"
   data-credit-remaining="<%= creditRemaining %>">
   Cancel Account
</a>
<% } %>

              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>      <% } else { %>
        <div class="no-data">
