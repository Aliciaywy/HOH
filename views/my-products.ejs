      transition: all 0.3s ease;
      font-size: 1rem;
      padding: 12px 20px;
      box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      min-width: 120px;
      position: relative;
      overflow: hidden;
    }

    .btn-hoh-send::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-hoh-send:hover::before {
      left: 100%;
    }

    .btn-hoh-send:hover {
      background: linear-gradient(135deg, #1e3a8a 0%, #16a34a 100%);
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
    }    .credit-status-box {
      background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(125, 249, 255, 0.05) 100%);
      border: 1px solid rgba(34, 197, 94, 0.3);
      border-radius: 20px;
      padding: 2rem;
      margin-top: 2rem;
      max-width: 500px;
      box-shadow: 
        0 8px 32px rgba(34, 197, 94, 0.15),
        0 4px 16px rgba(125, 249, 255, 0.1);
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .credit-status-box::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #22c55e, #7df9ff, #22c55e);
      animation: shimmer 3s ease-in-out infinite;
    }

    .credit-status-box h4 {
      color: #22c55e;
      margin-bottom: 1rem;
      font-weight: 700;
      font-family: 'Orbitron', sans-serif;
      font-size: 1.4rem;
      text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
    }

    .credit-status-box p {
      color: #e2e8f0;
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
      font-weight: 500;
    }

    .credit-status-box .btn-hoh {
      margin-top: 0;
    }

    /* Cancel button styling */
    .btn-danger {
      background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
      border: none;
      border-radius: 8px;
      padding: 8px 16px;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(220, 38, 38, 0.3);
    }

    .btn-danger:hover {
      background: linear-gradient(135deg, #b91c1c 0%, #dc2626 100%);
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(220, 38, 38, 0.4);
    }

    /* No data message styling */
    .no-data {
      text-align: center;
      color: #94a3b8;
      font-size: 1.1rem;
      padding: 2rem;
      background: rgba(24, 31, 47, 0.3);
      border-radius: 12px;
      border: 1px solid rgba(125, 249, 255, 0.1);
    }

    /* Responsive design */
    @media (max-width: 768px) {
      .container {
        margin: 0 15px;
        padding: 25px;
      }
      
      h2 {
        font-size: 2rem;
      }
      
      .action-buttons {
        flex-direction: column;
        gap: 8px;
      }
      
      .btn-hoh, .btn-hoh-transfer, .btn-hoh-send {
        min-width: 100%;
      }
      
      .table {
        font-size: 0.9rem;
      }
      
      .table th, .table td {
        padding: 12px 10px;
      }
    }
  </style>
</head>

