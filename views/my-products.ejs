              <div class="no-data">
                <i class="bi bi-credit-card" style="font-size: 2rem; margin-bottom: 1rem; display: block; color: #7df9ff;"></i>
                <p>No cards found. Apply for your first card to get started!</p>
                <a href="/apply-card" class="btn-hoh" style="margin-top: 1rem;">
                  <i class="bi bi-plus-circle"></i>
                  Apply for Card
                </a>
              </div>
              <% } %>

<% if (hasCreditAccount) { %>
  <div class="credit-status-box">
    <h4>
      <i class="bi bi-credit-card-2-front" style="margin-right: 10px;"></i>
      Credit Card Outstanding
    </h4>
    <p>
      <strong style="color: #7df9ff;">$<%= creditRemaining.toFixed(2) %></strong> remaining out of 
      <strong style="color: #22c55e;">$2,000.00</strong>
    </p>
    <% if (creditRemaining > 0) { %>
      <a href="/pay-bank" class="btn-hoh">
        <i class="bi bi-credit-card"></i>
        Pay Now
      </a>
    <% } else { %>
      <p style="color: #22c55e; font-weight: 600; margin: 0;">
        <i class="bi bi-check-circle-fill" style="margin-right: 8px;"></i>
        Credit Fully Paid
      </p>
    <% } %>
  </div>
<% } %>





  </div>
<script>
document.addEventListener('DOMContentLoaded', function () {
  const cancelButtons = document.querySelectorAll('.cancel-account-btn');

  cancelButtons.forEach(button => {
    button.addEventListener('click', function (e) {
      e.preventDefault();

      const balance = parseFloat(this.getAttribute('data-balance'));
      const accountType = this.getAttribute('data-account-type');
      const creditRemaining = parseFloat(this.getAttribute('data-credit-remaining'));
      const accountNumber = this.getAttribute('data-account-number');

      // 🔒 Block if credit account still has debt
      if (accountType === 'credit_account' && creditRemaining > 0) {
        alert(`This credit account still has $${creditRemaining.toFixed(2)} owed. Please pay it off before cancelling.`);
        return;
      }

      if (balance > 0) {
        const wantsTransfer = confirm(`This account has a balance of $${balance.toFixed(2)}.\nWould you like to transfer the funds first?`);

        if (wantsTransfer) {
          window.location.href = `/transfer?from_account=${accountNumber}`;
        } else {
          window.location.href = `/cancel-card/${accountNumber}`;
        }
      } else {
        window.location.href = `/cancel-card/${accountNumber}`;
      }
    });
  });
});

</script>

